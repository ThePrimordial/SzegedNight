<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/AtmName"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:textSize="25sp"
        android:text="AtmNév"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/AtmDistance"
        android:text="@string/Distance"
        android:textSize="18sp"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/AtmName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/AtmAdress" />

    <TextView
        android:id="@+id/AtmAdress"
        android:textSize="20sp"
        android:padding="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cím"
        android:layout_below="@+id/AtmName"
        android:layout_alignLeft="@+id/AtmName"
        android:layout_alignStart="@+id/AtmName"
        android:layout_toLeftOf="@+id/AtmDistance"
        android:layout_toStartOf="@+id/AtmDistance" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tpyePic"
        android:background="@drawable/beer_jar"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/AtmAdress"
        android:layout_toStartOf="@+id/AtmName" />


</RelativeLayout>