<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fagagy.szeged.hu.szegednight.pages.SubscribedPage"
    android:background="@drawable/background02">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/beer_jar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="pub_name"
        android:id="@+id/pub_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leiras"
            android:textSize="16sp"
            android:id="@+id/description"
            android:textColor="@color/White"
            android:textAlignment="gravity"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="165dp"
        android:layout_height="200dp"
        android:id="@+id/linearLayout2"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignRight="@+id/btnFacebook"
        android:layout_alignEnd="@+id/btnFacebook"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offers"
            android:text="akcók"
            android:textSize="15sp"
            android:textColor="@color/White"
            android:textAlignment="gravity"/>
    </LinearLayout>

    <!-- navigate to button -->
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/btnNavigate"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_navigate_to"
        />

    <!-- facebook/web button -->
    <ImageButton
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_facebook"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnNavigate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openClose"
            android:textSize="20sp"
            android:text="nyitvatartás"
            android:textColor="@color/White"
            android:textStyle="bold"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
