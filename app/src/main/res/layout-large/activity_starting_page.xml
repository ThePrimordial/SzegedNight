<ScrollView
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:scrollbarStyle="insideOverlay"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background02">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/imageView"
        android:background="@drawable/szegednights1"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:background="@drawable/btn_pub"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/Pubs"
        android:id="@+id/btnPubs"
        android:onClick="onClick" />

    <ImageButton
        android:background="@drawable/btn_party"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/Parties"
        android:id="@+id/btnParties"
        android:onClick="onClick"
        android:theme="@style/AppTheme" />

    <ImageButton
        android:background="@drawable/btn_restau"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/Restaurants"
        android:id="@+id/btnRestaurants"
        android:onClick="onClick"
        android:theme="@style/AppTheme" />

    <ImageButton
        android:background="@drawable/btn_shops"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/Shops"
        android:id="@+id/btnShops"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        />

    <ImageButton
        android:background="@drawable/btn_atm"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/ATM_Finder"
        android:id="@+id/btnATM"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        />

    <ImageButton
        android:background="@drawable/btn_trafik"
        android:layout_width="450dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:text="@string/TobaccoShops"
        android:id="@+id/btnTobaccoShops"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        />

    <RelativeLayout
        android:layout_width="450dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:background="@drawable/btn_kontakt"
            android:layout_width="223dp"
            android:layout_height="85dp"
            android:text="Kontakt"
            android:onClick="onClick"
            android:id="@+id/btnContact"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="2dp"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:background="@drawable/btn_info"
            android:layout_width="223dp"
            android:layout_height="85dp"
            android:id="@+id/btnInfo"
            android:text="Info"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="2dp"/>

    </RelativeLayout>

</LinearLayout>
</ScrollView>