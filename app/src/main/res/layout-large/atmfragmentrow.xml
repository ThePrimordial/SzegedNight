<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@color/material_gray300">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="top|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardElevation="10dp"
        android:foreground="@drawable/card_foreground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <TextView
        android:id="@+id/AtmName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:padding="2dp"
        android:textSize="22sp"
        android:text="AtmNÃ©v"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/typeImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/AtmDistance" />

    <TextView
        android:id="@+id/AtmDistance"
        android:text="@string/Distance"
        android:textColor="@color/White"
        android:textSize="22sp"
        android:padding="2dp"
        android:gravity="end"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/typeImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:padding="2dp"
        android:id="@+id/typeImage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>