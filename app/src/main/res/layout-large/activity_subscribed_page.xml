<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background02"
    tools:context="fagagy.szeged.hu.szegednight.pages.SubscribedPage">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/beer_jar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:textColor="@color/white"
        android:text="pub_name"
        android:id="@+id/pub_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/btnNavigate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/linearLayout2"
        android:layout_toStartOf="@+id/linearLayout2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/openClose"
                android:text="nyitvatartás"
                android:background="@drawable/subscribed_border"
                android:textColor="@color/white"
                android:textSize="22sp"
                />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="165dp"
        android:layout_height="260dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/pub_name"
        android:id="@+id/linearLayout2"
        android:layout_toRightOf="@+id/pub_name">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offers"
            android:textColor="@color/white"
            android:text="akcók"
            android:background="@drawable/subscribed_border"
            android:textSize="22sp"
            android:textAlignment="center"
            />
    </LinearLayout>

    <!-- navigate to button -->
    <ImageButton
        android:layout_width="218dp"
        android:layout_height="90dp"
        android:id="@+id/btnNavigate"
        android:background="@drawable/btn_navigate_to"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- facebook/web button -->
    <ImageButton
        android:layout_width="218dp"
        android:layout_height="90dp"
        android:id="@+id/btnFacebook"
        android:background="@drawable/btn_facebook"
        android:layout_above="@+id/linearLayout4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnNavigate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="leiras"
            android:id="@+id/description"
            android:textSize="24sp"
            android:textAlignment="center"
            android:background="@drawable/subscribed_border"
            android:layout_weight="1.03"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
