<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fagagy.szeged.hu.szegednight.pages.SubscribedPage"
    android:background="@drawable/background02">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/beer_jar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="45sp"
        android:textColor="@color/White"
        android:text="pub_name"
        android:id="@+id/pub_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_toEndOf="@+id/imageView4" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="200dp"
        android:layout_height="260dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/imageView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btnNavigate"
        android:layout_alignEnd="@+id/btnNavigate"
        android:background="@drawable/subscribed_border"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openClose"
            android:text="nyitvatartás"
            android:textSize="22sp"
            android:textColor="@color/White"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="165dp"
        android:layout_height="260dp"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/linearLayout"
        android:id="@+id/linearLayout2"
        android:layout_alignLeft="@+id/btnFacebook"
        android:layout_alignStart="@+id/btnFacebook"
        android:background="@drawable/subscribed_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offers"
            android:text="akcók"
            android:textSize="22sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            />
    </LinearLayout>

    <!-- navigate to button -->
    <ImageButton
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:id="@+id/btnNavigate"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_navigate_to"
        />

    <!-- facebook/web button -->
    <ImageButton
        android:layout_width="260dp"
        android:layout_height="90dp"
        android:id="@+id/btnFacebook"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_facebook"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnNavigate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/subscribed_border"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="leiras"
            android:id="@+id/description"
            android:textSize="24sp"
            android:textAlignment="center"
            android:textColor="@color/White"
            />
    </LinearLayout>

</RelativeLayout>
