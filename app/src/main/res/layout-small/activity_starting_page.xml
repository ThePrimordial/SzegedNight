<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background02">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/imageView"
        android:background="@drawable/szegednights1"
        android:layout_gravity="center_horizontal" />

    <ImageButton
        android:background="@drawable/btn_pub"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/Pubs"
        android:id="@+id/btnPubs"
        android:onClick="onClick"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:background="@drawable/btn_party"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/Parties"
        android:id="@+id/btnParties"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:background="@drawable/btn_restau"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/Restaurants"
        android:id="@+id/btnRestaurants"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:background="@drawable/btn_shops"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/Shops"
        android:id="@+id/btnShops"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:background="@drawable/btn_atm"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/ATM_Finder"
        android:id="@+id/btnATM"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="5dp" />

    <ImageButton
        android:background="@drawable/btn_trafik"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="@string/TobaccoShops"
        android:id="@+id/btnTobaccoShops"
        android:layout_gravity="center_horizontal"
        android:onClick="onClick"
        android:theme="@style/AppTheme"
        android:layout_marginBottom="25dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="40dp">

        <ImageButton
            android:background="@drawable/btn_kontakt"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:text="Kontakt"
            android:onClick="onClick"
            android:id="@+id/btnContact"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            />

        <ImageButton
            android:background="@drawable/btn_info"
            android:layout_width="185dp"
            android:layout_height="65dp"
            android:id="@+id/btnInfo"
            android:text="Info"
            android:onClick="onClick"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</LinearLayout>
</ScrollView>